{
    "name": "grantholle/pear-http-request2",
    "description": "A port of pear/http_request2: Provides an easy way to perform HTTP requests.",
    "type": "library",
    "keywords": [
        "http",
        "request",
        "pear",
        "curl"
    ],
    "homepage": "https://github.com/grantholle/pear-http-request2",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Alexey Borzov",
            "email": "avb@php.net"
        },
        {
            "name": "Grant Holle",
            "homepage": "https://grantholle.com"
        }
    ],
    "support": {
        "issues": "https://github.com/grantholle/pear-http-request2/issues",
        "source": "https://github.com/grantholle/pear-http-request2"
    },
    "require": {
        "php": "^7.2|^8.0",
        "grantholle/pear-net-url2": "^3.0",
        "ext-zlib": "*",
        "ext-mbstring": "*",
        "ext-fileinfo": "*",
        "ext-curl": "*"
    },
    "suggest": {
        "ext-openssl": "Allows handling SSL requests when not using cURL."
    },
    "autoload": {
        "psr-4": {
            "Pear\\Http\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^8",
        "ext-json": "*"
    }
}
